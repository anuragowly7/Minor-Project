<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.dellpc.bloodbank">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.SEND_SMS" />

    <application
        android:screenOrientation="portrait"
        android:allowBackup="true"
        android:background="@drawable/mybtnselect"
        android:icon="@mipmap/logo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity
            android:name=".SplashScreen"
            android:screenOrientation="portrait"
            android:background="@drawable/mybtnselect"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:theme="@style/FullscreenTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Homescreen"
            android:screenOrientation="portrait"/>
        <activity android:name=".DonorInfo"
            android:screenOrientation="portrait"/>
        <activity android:name=".ViewListContents"
            android:screenOrientation="portrait"/>
        <activity android:name=".ViewListContents_Guest"
            android:screenOrientation="portrait"/>
        <activity android:name=".ViewListContents1"
            android:screenOrientation="portrait"/>
        <activity android:name=".Loign"
            android:screenOrientation="portrait"/>
        <activity android:name=".Register"
            android:screenOrientation="portrait"/>
        <activity android:name=".Acceptdonate" />
        <activity android:name=".Donor" />
        <activity android:name=".bloodselection"
            android:screenOrientation="portrait"/>
        <activity android:name=".Admin"
            android:screenOrientation="portrait"/>
        <activity android:name=".AdminLogin"
            android:screenOrientation="portrait"/>
        <activity android:name=".AdminDonorInfo"
            android:screenOrientation="portrait"/>
        <activity android:name=".viewdonors"
            android:screenOrientation="portrait"/>
        <activity android:name=".DonorInfo_Guest"
            android:screenOrientation="portrait"/>

        <service android:name=".FirebaseMessagingService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

        <meta-data
            android:name="com.google.firebase.messaging.default_notification_color"
            android:resource="@color/red" />

        <activity
            android:screenOrientation="portrait"
            android:name="com.google.android.gms.ads.AdActivity"
            android:background="@drawable/mybtnselect"
            android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize"
            android:theme="@android:style/Theme.Translucent" />
        <activity android:name=".chat"
            android:screenOrientation="portrait"/>
        <activity android:name=".emergency"
            android:screenOrientation="portrait"/>
        <activity android:name=".aboutus"
            android:screenOrientation="portrait"/>
        <activity android:name=".Listdonor" android:screenOrientation="portrait" />
        <activity android:name=".bloodselection_guest"  android:screenOrientation="portrait" />
        <activity android:name=".userprofile"  android:screenOrientation="portrait"/>
        <activity android:name=".updateprofile"  android:screenOrientation="portrait"/>
        <activity android:name=".facts" android:screenOrientation="portrait"/>
    </application>

</manifest>